{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pet Adoption MongoDB Schema",
  "description": "Complete data schema for pet documents in MongoDB for the Pet Adoption Management System",
  "type": "object",
  "required": ["name", "animal", "breed", "age", "medicalCondition"],
  "properties": {
    "_id": {
      "type": "string",
      "description": "MongoDB ObjectId (auto-generated)",
      "pattern": "^[0-9a-fA-F]{24}$"
    },
    "name": {
      "type": "string",
      "description": "Pet's name",
      "maxLength": 50,
      "minLength": 1,
      "pattern": "^\\S.*\\S$|^\\S$",
      "examples": ["Bella", "Milo", "Rocky", "Luna"]
    },
    "animal": {
      "type": "string",
      "description": "Type of animal",
      "enum": ["dog", "cat", "bird", "rabbit", "hamster", "fish", "other"],
      "examples": ["dog", "cat", "bird"]
    },
    "breed": {
      "type": "string",
      "description": "Pet's breed",
      "maxLength": 50,
      "minLength": 1,
      "examples": ["Labrador Mix", "Tabby", "Beagle", "Siamese", "Golden Retriever"]
    },
    "age": {
      "type": "number",
      "description": "Pet's age in years (can be decimal for months)",
      "minimum": 0,
      "maximum": 30,
      "examples": [2, 1, 3, 0.7, 4]
    },
    "medicalCondition": {
      "type": "string",
      "description": "Pet's medical condition and health information",
      "maxLength": 500,
      "minLength": 1,
      "examples": [
        "Healthy, vaccinated.",
        "Mild food allergy.",
        "Healthy, microchipped.",
        "Patella Grade 1 (minor)."
      ]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the pet record was created (auto-generated by MongoDB)",
      "examples": ["2025-08-08T12:00:00.000Z"]
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the pet record was last updated (auto-generated by MongoDB)",
      "examples": ["2025-08-08T12:00:00.000Z"]
    },
    "__v": {
      "type": "number",
      "description": "Version key (auto-generated by Mongoose)",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "_id": "507f1f77bcf86cd799439011",
      "name": "Bella",
      "animal": "dog",
      "breed": "Labrador Mix",
      "age": 2,
      "medicalCondition": "Healthy, vaccinated. Up to date on all shots and spayed.",
      "createdAt": "2025-08-08T12:00:00.000Z",
      "updatedAt": "2025-08-08T12:00:00.000Z",
      "__v": 0
    },
    {
      "_id": "507f1f77bcf86cd799439012",
      "name": "Milo",
      "animal": "cat",
      "breed": "Tabby",
      "age": 1,
      "medicalCondition": "Mild food allergy. Requires special diet but otherwise healthy.",
      "createdAt": "2025-08-06T12:00:00.000Z",
      "updatedAt": "2025-08-06T12:00:00.000Z",
      "__v": 0
    },
    {
      "_id": "507f1f77bcf86cd799439013",
      "name": "Kiwi",
      "animal": "bird",
      "breed": "Cockatiel",
      "age": 1.2,
      "medicalCondition": "Healthy. Very social and loves to sing.",
      "createdAt": "2025-07-20T12:00:00.000Z",
      "updatedAt": "2025-07-20T12:00:00.000Z",
      "__v": 0
    }
  ],
  "notes": {
    "validation_rules": {
      "name": "Required, trimmed, max 50 characters",
      "animal": "Required, must be one of the enum values",
      "breed": "Required, trimmed",
      "age": "Required, number between 0-30",
      "medicalCondition": "Required, trimmed, max 500 characters"
    },
    "indexes": {
      "performance": "Indexes are created on animal, breed, age, and createdAt fields for better query performance"
    },
    "age_categories": {
      "puppy_kitten": "< 1 year",
      "young": "1-3 years",
      "adult": "3-7 years",
      "senior": "7+ years"
    },
    "supported_animals": ["dog", "cat", "bird", "rabbit", "hamster", "fish", "other"]
  }
}